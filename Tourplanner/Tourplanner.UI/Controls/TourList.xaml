<UserControl x:Class="Views.Controls.TourList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <GroupBox Grid.Row="2" Grid.RowSpan="2" Grid.Column="0" Header="Tours" MinHeight="250" Margin="5">
            <StackPanel MinHeight="200">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button Content="+" Width="30" Margin="5" Command="{Binding AddTourToList}" />
                    <Button Content="-" Width="30" Margin="5" Command="{Binding RemoveTourFromList}" />
                </StackPanel>
                <ListBox ItemsSource="{Binding Items}" SelectedItem="{Binding SelectedItem}" VerticalAlignment="Stretch" BorderThickness="0"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</UserControl>

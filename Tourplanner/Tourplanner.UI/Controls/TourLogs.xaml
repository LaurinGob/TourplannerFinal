<UserControl x:Class="Views.Controls.TourLogs"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <GroupBox Margin="5" Padding="5" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="5" Height="300" Header="Tour Log">
            <StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,5">
                    <Button Content="+" Width="30" Margin="5" Command="{Binding AddLogCommand}" />
                    <Button Content="-" Width="30" Margin="5" Command="{Binding RemoveLogCommand}" />
                </StackPanel>

                <DataGrid AutoGenerateColumns="False"
          ItemsSource="{Binding TourLogs}"
          SelectedItem="{Binding SelectedTourLog}"
          CanUserAddRows="False"
          HeadersVisibility="Column"
          Margin="0"
          VerticalAlignment="Stretch">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Date" Binding="{Binding Date}" />
                        <DataGridTextColumn Header="Duration" Binding="{Binding Duration}" />
                        <DataGridTextColumn Header="Distance" Binding="{Binding Distance}" />
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </GroupBox>
    </Grid>
</UserControl>
